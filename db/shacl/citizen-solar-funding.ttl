@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ckg: <http://ckg.de/default#> .
@prefix fim: <https://test.schema-repository.fitko.dev/fields/baukasten/> .

ckg:WohnflaecheOk
    a sh:NodeShape ;
    sh:targetClass fim:F00003175 ;
    sh:property [
          sh:path ckg:hasValue ;
          sh:datatype xsd:integer ;
          sh:minInclusive 50 ;
          sh:minCount 1 ;
      ] .

# This is a workaround to showcase inference in the demo, we need a better strategy
ckg:EnsureWohnsitzFieldIsUsed
    a sh:NodeShape ;
    sh:targetNode ckg:FimDataField ;
    sh:property [
          sh:path ckg:used ;
          sh:hasValue fim:F03003228 ;
          sh:minCount 1 ;
      ] .

ckg:WohnsitzOk
    a sh:NodeShape ;
    sh:targetClass fim:F03003228 ;
    sh:property [
          sh:path ckg:hasValue ;
          sh:datatype xsd:string ;
          sh:hasValue "Berlin" ;
          sh:minCount 1 ;
      ] .
